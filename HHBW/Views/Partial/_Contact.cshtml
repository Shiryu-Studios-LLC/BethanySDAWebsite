@inject SiteManager manager;
<section id="contact" class="contact section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            <p></p>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <a href='https://maps.google.com/?q=@manager.GetInfo.Info.Address' target="_blank">
                    <a href='https://maps.apple.com/maps?q=@manager.GetInfo.Info.Address' target="_blank">
                        <div class="info-box mb-4">
                            <i class="bx bx-map"></i>
                            <h3>Our Address</h3>
                            <p>@manager.GetInfo.Info.Address</p>
                        </div>
                    </a>
                </a>
            </div>

            <div class="col-lg-3 col-md-6">
                <a href="mailto:@manager.GetInfo.Info.Email">
                    <div class="info-box  mb-4">
                        <i class="bx bx-envelope"></i>
                        <h3>Email Us</h3>
                        <p>@manager.GetInfo.Info.Email</p>
                    </div>
                </a>
            </div>

            <div class="col-lg-3 col-md-6">
                <a href="tel:@manager.GetInfo.Info.Phone">
                    <div class="info-box  mb-4">
                        <i class="bx bx-phone-call"></i>
                        <h3>Call Us</h3>
                        <p>@manager.GetInfo.Info.Phone</p>
                    </div>
                </a>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-6 ">
                <iframe class="mb-4 mb-lg-0" src=@manager.GetInfo.Api.GoogleMap frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
            </div>

            <div class="col-lg-6">
                <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                    </div>
                    <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit">Send Message</button></div>
                </form>
            </div>
        </div>
    </div>
</section>