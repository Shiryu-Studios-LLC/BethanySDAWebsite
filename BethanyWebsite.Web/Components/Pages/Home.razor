@page "/"
@using BethanyWebsite.Web.Components.Layout
<PageTitle>Home</PageTitle>

<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active position-relative">

            <!-- Background video -->
            <div class="bg-video">
                <video autoplay muted loop playsinline preload="metadata" poster="/media/DSCN0543.JPG">
                    <!-- Prefer MP4/H.264 for Chrome/Edge; keep MOV as a fallback if you must -->
                    <source src="/media/IMG_3258.mp4" type="video/mp4" />
                    <source src="/media/IMG_3258.mov" type="video/quicktime" />
                    Your browser does not support the video tag.
                </video>
            </div>

            <!-- Optional dark overlay -->
            <div class="bg-overlay"></div>

            <!-- Centered caption -->
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h5 class="display-4 fw-bold">Bethany SDA</h5>
                <p class="lead">Some representative placeholder content for the first slide.</p>
                <button type="button" class="btn btn-primary btn-lg">Plan A Visit</button>
            </div>
        </div>
    </div>
</div>
