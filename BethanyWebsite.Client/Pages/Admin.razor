@page "/admin"
<PageTitle>Admin Portal - Bethany SDA Church</PageTitle>

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 mb-4">
                <i class="bi bi-gear-fill"></i> Admin Portal
            </h1>
            <p class="lead text-muted">Manage church content without editing code</p>
            <hr class="my-4" />
        </div>
    </div>

    <div class="row g-4">
        <!-- Media Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-primary text-white me-3">
                            <i class="bi bi-images fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Media Library</h5>
                    </div>
                    <p class="card-text text-muted">
                        Upload and manage images, videos, and documents for your website.
                    </p>
                    <NavLink class="btn btn-primary btn-sm" href="/admin/media">
                        <i class="bi bi-arrow-right-circle me-1"></i> Manage Media
                    </NavLink>
                </div>
            </div>
        </div>

        <!-- Homepage Editor Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-success text-white me-3">
                            <i class="bi bi-house-door-fill fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Homepage</h5>
                    </div>
                    <p class="card-text text-muted">
                        Edit homepage content, hero video, and featured announcements.
                    </p>
                    <NavLink class="btn btn-success btn-sm" href="/admin/homepage">
                        <i class="bi bi-pencil-square me-1"></i> Edit Homepage
                    </NavLink>
                </div>
            </div>
        </div>

        <!-- Events Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-info text-white me-3">
                            <i class="bi bi-calendar-event fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Events</h5>
                    </div>
                    <p class="card-text text-muted">
                        Create and manage church events, services, and special programs.
                    </p>
                    <NavLink class="btn btn-info btn-sm" href="/admin/events">
                        <i class="bi bi-plus-circle me-1"></i> Manage Events
                    </NavLink>
                </div>
            </div>
        </div>

        <!-- Sermons Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-warning text-dark me-3">
                            <i class="bi bi-mic-fill fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Sermons</h5>
                    </div>
                    <p class="card-text text-muted">
                        Upload sermon audio and video, manage sermon archive.
                    </p>
                    <NavLink class="btn btn-warning btn-sm" href="/admin/sermons">
                        <i class="bi bi-upload me-1"></i> Upload Sermon
                    </NavLink>
                </div>
            </div>
        </div>

        <!-- Bulletins & Documents Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-danger text-white me-3">
                            <i class="bi bi-file-earmark-pdf fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Bulletins</h5>
                    </div>
                    <p class="card-text text-muted">
                        Upload weekly bulletins, newsletters, and announcements.
                    </p>
                    <NavLink class="btn btn-danger btn-sm" href="/admin/bulletins">
                        <i class="bi bi-file-pdf me-1"></i> Manage Bulletins
                    </NavLink>
                </div>
            </div>
        </div>

        <!-- Settings Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-secondary text-white me-3">
                            <i class="bi bi-sliders fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Site Settings</h5>
                    </div>
                    <p class="card-text text-muted">
                        Configure site information, contact details, and social media links.
                    </p>
                    <NavLink class="btn btn-secondary btn-sm" href="/admin/settings">
                        <i class="bi bi-gear me-1"></i> Site Settings
                    </NavLink>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-3">Quick Stats</h3>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="bi bi-images text-primary"></i>
                <h4>--</h4>
                <p>Images</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="bi bi-camera-video text-success"></i>
                <h4>--</h4>
                <p>Videos</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="bi bi-calendar-event text-info"></i>
                <h4>--</h4>
                <p>Upcoming Events</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="bi bi-mic text-warning"></i>
                <h4>--</h4>
                <p>Sermons</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-card {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        border: 1px solid #dee2e6;
    }

    .stat-card i {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .stat-card h4 {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .stat-card p {
        margin: 0;
        color: #6c757d;
        font-size: 0.9rem;
    }
</style>

